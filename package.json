{
  "name": "template",
  "version": "1.0.0",
  "description": "A template for my basic Express apps",
  "main": "src/app.ts",
  "type": "module",
  "scripts": {
    "build": "tsc --project ./tsconfig.build.json",
    "format": "prettier --write .",
    "lint": "eslint --report-unused-disable-directives \"{src, e2e}/**/*.ts\"",
    "start": "tsc --project ./tsconfig.build.json && node dist/app.ts",
    "start:dev": "tsx watch --ignore src/**/*.spec.ts --ignore e2e --clear-screen=false src/app.ts",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config ./e2e/jest-e2e.config.cjs"
  },
  "keywords": [],
  "author": "lanceHoenhymmm",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^7.1.0",
    "http-status": "^1.7.3",
    "morgan": "^1.10.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.8",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.9.0",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.1.1",
    "typescript": "^5.2.2"
  }
}
